<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Service Configurator</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container py-4">
  <h1 class="mb-4">Configure Services</h1>
  <form method="post">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-2">
    <% services.forEach(function(svc){ %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="services" value="<%= svc %>" id="svc-<%= svc %>" <% if (selected.includes(svc)) { %>checked<% } %>>
        <label class="form-check-label" for="svc-<%= svc %>"><%= svc %></label>
      </div>
    <% }) %>
    </div>
    <button class="btn btn-primary mt-3" type="submit">Save</button>
  </form>
  <% if (saved) { %>
  <div class="alert alert-success mt-3">Configuration saved.</div>
  <% } %>
</body>
</html>
